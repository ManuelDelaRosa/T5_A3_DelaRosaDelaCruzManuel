<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_Abrir_Bajas"
        android:layout_width="280dp"
        android:layout_height="121dp"
        android:onClick="abrirActivities"
        android:text="Eliminar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.572"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Abrir_Altas" />

    <Button
        android:id="@+id/btn_Abrir_Cambios"
        android:layout_width="280dp"
        android:layout_height="121dp"
        android:onClick="abrirActivities"
        android:text="Modificar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.572"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Abrir_Bajas" />

    <Button
        android:id="@+id/btn_Abrir_Consultas"
        android:layout_width="280dp"
        android:layout_height="121dp"
        android:onClick="abrirActivities"
        android:text="Consultas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.572"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Abrir_Cambios"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_Abrir_Altas"
        android:layout_width="280dp"
        android:layout_height="121dp"
        android:layout_marginTop="64dp"
        android:onClick="abrirActivities"
        android:text="Altas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.572"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>